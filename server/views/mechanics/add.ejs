<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Add Mechanic</title>
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>
  <body id="page-top">
    <div id="wrapper">
      <%- include('../layout/sideber.ejs') %>
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%- include('../layout/navber.ejs') %>

          <div class="container-fluid">
            <h1 class="h3 mb-4 text-gray-800">Add Mechanic</h1>
            <div class="card shadow mb-4">
              <div class="card-body">
                <form action="/mechanics/add" method="POST">
                  
                  <!-- Mechanic Name -->
                  <div class="form-group">
                    <label>Mechanic Name</label>
                    <input type="text" name="name" class="form-control" required />
                  </div>

                  <!-- Email -->
                  <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" required />
                  </div>

                  <!-- Password -->
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" required />
                  </div>

                  <!-- Phone -->
                  <div class="form-group">
                    <label>Phone</label>
                    <input type="text" name="phone" class="form-control" required />
                  </div>

                  <!-- Skillset (multi select) -->
                  <div class="form-group">
                    <label>Skillset</label>
                    <select name="skillset" class="form-control" multiple required>
                      <option value="Oil Change">Oil Change</option>
                      <option value="Engine Repair">Engine Repair</option>
                      <option value="Brake Service">Brake Service</option>
                      <option value="Dent Repair">Dent Repair</option>
                      <option value="Painting">Painting</option>
                      <option value="Tire Replacement">Tire Replacement</option>
                      <option value="Electrical Work">Electrical Work</option>
                    </select>
                    <small class="form-text text-muted">
                      Hold CTRL (or CMD on Mac) to select multiple skills
                    </small>
                  </div>

                  <!-- Experience -->
                  <div class="form-group">
                    <label>Experience (in years)</label>
                    <input type="number" name="experience" min="0" class="form-control" required />
                  </div>

                  <!-- Address (multiple lines = array of strings) -->
                  <div class="form-group">
                    <label>Address</label>
                    <textarea name="address" rows="3" class="form-control" placeholder="Enter address lines separated by commas" required></textarea>
                    <small class="form-text text-muted">
                      Example: "Street 12, City Center, New Delhi"
                    </small>
                  </div>

                  <!-- Buttons -->
                  <button type="submit" class="btn btn-primary">Add Mechanic</button>
                  <a href="/mechanics/list" class="btn btn-secondary">Cancel</a>
                </form>
              </div>
            </div>
          </div>
        </div>

        <%- include('../layout/footer.ejs') %>
      </div>
    </div>

    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
  </body>
</html>
