<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Booking</title>
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>
  <body id="page-top">
    <div id="wrapper">
      <%- include('../layout/sideber.ejs') %>
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%- include('../layout/navber.ejs') %>

          <div class="container-fluid">
            <h1 class="h3 mb-4 text-gray-800">Edit Booking</h1>
            <div class="card shadow mb-4">
              <div class="card-body">
                <form action="/booking/update/<%= data._id %>" method="POST">
                  
                  <!-- Customer Dropdown -->
                  <div class="form-group">
                    <label>Customer</label>
                    <select name="customer" class="form-control" required>
                      <% customers.forEach(c => { %>
                        <option value="<%= c._id %>" <%= (data.customer && data.customer._id.toString() === c._id.toString()) ? "selected" : "" %>>
                          <%= c.name %>
                        </option>
                      <% }) %>
                    </select>
                  </div>

                  <!-- Vehicle Dropdown -->
                  <div class="form-group">
                    <label>Vehicle</label>
                    <select name="vehicle" class="form-control" required>
                      <% vehicles.forEach(v => { %>
                        <option value="<%= v._id %>" <%= (data.vehicle && data.vehicle._id.toString() === v._id.toString()) ? "selected" : "" %>>
                          <%= v.model %>
                        </option>
                      <% }) %>
                    </select>
                  </div>

                  <!-- Service Dropdown -->
                  <div class="form-group">
                    <label>Service</label>
                    <select name="service" class="form-control" required>
                      <% services.forEach(s => { %>
                        <option value="<%= s._id %>" <%= (data.service && data.service._id.toString() === s._id.toString()) ? "selected" : "" %>>
                          <%= s.name %>
                        </option>
                      <% }) %>
                    </select>
                  </div>

                  <!-- Mechanic Dropdown -->
                  <div class="form-group">
                    <label>Mechanic</label>
                    <select name="mechanic" class="form-control">
                      <option value="">-- Select Mechanic --</option>
                      <% mechanics.forEach(m => { %>
                        <option value="<%= m._id %>" <%= (data.mechanic && data.mechanic._id.toString() === m._id.toString()) ? "selected" : "" %>>
                          <%= m.name %>
                        </option>
                      <% }) %>
                    </select>
                  </div>

                  <!-- Booking Date -->
                  <div class="form-group">
                    <label>Booking Date</label>
                    <input type="date" name="bookingDate" class="form-control"
                      value="<%= data.bookingDate ? data.bookingDate.toISOString().split('T')[0] : '' %>" required />
                  </div>

                  <!-- Status -->
                  <div class="form-group">
                    <label>Status</label>
                    <select name="status" class="form-control" required>
                      <option value="Pending" <%= data.status === "Pending" ? "selected" : "" %>>Pending</option>
                      <option value="In Progress" <%= data.status === "In Progress" ? "selected" : "" %>>In Progress</option>
                      <option value="Completed" <%= data.status === "Completed" ? "selected" : "" %>>Completed</option>
                    </select>
                  </div>

                  <!-- Remarks -->
                  <div class="form-group">
                    <label>Remarks</label>
                    <textarea name="remarks" rows="3" class="form-control"><%= data.remarks %></textarea>
                  </div>

                  <button type="submit" class="btn btn-primary">Update</button>
                  <a href="/booking/list" class="btn btn-secondary">Cancel</a>
                </form>
              </div>
            </div>
          </div>
        </div>

        <%- include('../layout/footer.ejs') %>
      </div>
    </div>

    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
  </body>
</html>
