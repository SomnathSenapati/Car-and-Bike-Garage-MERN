<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Booking List</title>
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
    <link
      href="/vendor/datatables/dataTables.bootstrap4.min.css"
      rel="stylesheet"
    />
  </head>
  <body id="page-top">
    <div id="wrapper">
      <%- include('../layout/sideber.ejs') %>

      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%- include('../layout/navber.ejs') %>

          <div class="container-fluid">
            <!-- Page Heading -->
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h1 class="h3 text-gray-800">
                <i class="fas fa-calendar-check mr-2"></i> Booking Management
              </h1>
              <a href="/booking/add" class="btn btn-success shadow-sm">
                <i class="fas fa-plus mr-1"></i> Add Booking
              </a>
            </div>

            <!-- Booking Table Card -->
            <div class="card shadow mb-4">
              <div class="card-header py-3 bg-primary">
                <h6 class="m-0 font-weight-bold text-white">
                  <i class="fas fa-list mr-1"></i> Booking List
                </h6>
              </div>

              <% if (!data || data.length === 0) { %>
              <div class="p-4 text-center">
                <p class="text-danger mb-0">
                  <i class="fas fa-exclamation-circle mr-1"></i> No bookings
                  found
                </p>
              </div>
              <% } else { %>
              <div class="card-body">
                <div class="table-responsive">
                  <table
                    class="table table-hover table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
                    <thead class="thead-dark">
                      <tr class="text-center">
                        <th>#</th>
                        <th>Customer</th>
                        <th>Vehicle</th>
                        <th>Service</th>
                        <th>Mechanic</th>
                        <th>Booking Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% data.forEach((item, index) => { %>
                      <tr class="align-middle text-center">
                        <td><%= index + 1 %></td>
                        <td><%= item.name %></td>
                        <td>
                          <%= item.vehicle_type %> - <%= item.vehicle_brand %> -
                          <%= item.vehicle_model %> (<%= item.vehicle_number %>)
                        </td>
                        <td><%= item.service %></td>
                        <td>
                          <% if(item.status === "Pending") { %>
                          <!-- Dropdown for mechanics -->
                          <form
                            action="/booking/assign/<%= item._id %>"
                            method="post"
                            class="assign-form d-inline"
                          >
                            <select
                              name="mechanicId"
                              class="form-control form-control-sm d-inline mechanic-select"
                              required
                            >
                              <option value="">-- Select Mechanic --</option>
                              <% mechanics.forEach(mechanic => { %>
                              <option value="<%= mechanic._id %>">
                                <%= mechanic.name %>
                              </option>
                              <% }) %>
                            </select>
                          </form>
                          <% } else { %>
                          <span
                            ><%= item.mechanic ? item.mechanic.name : 'N/A'
                            %></span
                          >
                          <% } %>
                        </td>

                        <td>
                          <span class="badge badge-secondary">
                            <%= item.bookingDate ? new
                            Date(item.bookingDate).toDateString() : 'N/A' %>
                          </span>
                        </td>
                        <td>
                          <% if (item.status === "Pending") { %>
                          <span class="badge badge-warning">Pending</span>
                          <% } else if (item.status === "In Progress") { %>
                          <span class="badge badge-info">In Progress</span>
                          <% } else if (item.status === "Rejected") { %>
                          <span class="badge badge-danger">Rejected</span>
                          <% } else if (item.status === "Booked") { %>
                          <span class="badge badge-success">Booked</span>
                          <% } else { %>
                          <span class="badge badge-success">Completed</span>
                          <% } %>
                        </td>
                        <td>
                          <% if(item.status === "Pending") { %>
                          <!-- Reject button -->
                          <a
                            href="/booking/reject/<%= item._id %>"
                            class="btn btn-sm btn-danger"
                            onclick="return confirm('Are you sure you want to reject this booking?')"
                          >
                            <i class="fas fa-times-circle"></i> Reject
                          </a>

                          <!-- Confirm button -->
                          <a
                            href="/booking/confirm/<%= item._id %>"
                            class="btn btn-sm btn-success ml-1"
                            onclick="return confirm('Are you sure you want to confirm this booking?')"
                          >
                            <i class="fas fa-check-circle"></i> Confirm
                          </a>
                          <% } else { %>
                          <span>N/A</span>
                          <% } %>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
        <%- include('../layout/footer.ejs') %>
      </div>
    </div>

    <!-- JS -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="/js/demo/datatables-demo.js"></script>
  </body>
</html>
