<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Booking List</title>
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
  </head>
  <body id="page-top">
    <div id="wrapper">
      <%- include('../layout/sideber.ejs') %>
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%- include('../layout/navber.ejs') %>

          <div class="container-fluid">
            <h1 class="h3 mb-4 text-gray-800">Booking Info</h1>
            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <a href="/booking/add" class="btn btn-success">Add Booking</a>
              </div>

              <% if (!data || data.length === 0) { %>
                <p class="text-center text-danger mt-3">No bookings found</p>
              <% } else { %>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Customer</th>
                          <th>Vehicle</th>
                          <th>Service</th>
                          <th>Mechanic</th>
                          <th>Booking Date</th>
                          <th>Status</th>
                          <th>Remarks</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% data.forEach((item, index) => { %>
                          <tr>
                            <td><%= index + 1 %></td>
                            <td><%= item.customer ? item.customer.name : 'N/A' %></td>
                            <td><%= item.vehicle ? item.vehicle.model : 'N/A' %></td>
                            <td><%= item.service ? item.service.name : 'N/A' %></td>
                            <td><%= item.mechanic ? item.mechanic.name : 'Not Assigned' %></td>
                            <td><%= item.bookingDate ? new Date(item.bookingDate).toDateString() : 'N/A' %></td>
                            <td>
                              <% if (item.status === "Pending") { %>
                                <span class="badge badge-warning">Pending</span>
                              <% } else if (item.status === "In Progress") { %>
                                <span class="badge badge-info">In Progress</span>
                              <% } else { %>
                                <span class="badge badge-success">Completed</span>
                              <% } %>
                            </td>
                            <td><%= item.remarks || "N/A" %></td>
                            <td>
                              <a href="/booking/edit/<%= item._id %>" class="btn btn-success btn-sm">Edit</a>
                              <a href="/booking/delete/<%= item._id %>" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>
        <%- include('../layout/footer.ejs') %>
      </div>
    </div>

    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="/js/demo/datatables-demo.js"></script>
  </body>
</html>
